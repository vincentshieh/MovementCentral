<form action="<%= url %>" method="post">
  <%= auth_input %>

  <% if button_value == 'Sign Up' %>
    <label>
      First name
      <input type="text" name="user[fname]">
    </label><br>

    <label>
      Last name
      <input type="text" name="user[lname]">
    </label><br>

    <label>
      Nickname
      <input type="text" name="user[nickname]">
    </label><br>
  <% end %>

  <label>
    Email
    <input type="text" name="user[email]">
  </label><br>

  <label>
    Password
    <input type="password" name="user[password]">
  </label><br>

  <% if button_value == 'Sign Up' %>
    <input type="radio" name="user[gender]" value="Female">Female
    <input type="radio" name="user[gender]" value="Male">Male
    <br>

    <label>
      Dance Style
      <select name="user[dance_style]">
        <% @dance_styles.each do |ds| %>
          <option value="<%= ds %>"><%= ds %></option>
        <% end %>
      </select>
    </label><br>

    <label>
      Company
      <input type="text" name="user[company]">
    </label><br>
  <% end %>

  <input type="submit" value="<%= button_value %>">
</form>
