<div class="login-form">
  <form action="<%= url %>" method="post">
    <%= auth_input %>

    <% if button_value == 'Sign Up' %>
      <input type="text"
             name="user[fname]"
             placeholder="First name"
             class="form-control"><br>

      <input type="text"
             name="user[lname]"
             placeholder="Last name"
             class="form-control"><br>

      <input type="text"
             name="user[nickname]"
             placeholder="Nickname"
             class="form-control"><br>
    <% end %>

    <input type="email"
           name="user[email]"
           placeholder="Email"
           class="email form-control"><br>

    <input type="password"
           name="user[password]"
           placeholder="Password"
           class="password form-control"><br>

    <% if button_value == 'Sign Up' %>
      <div class="radio-inline">
        <label>
          <input type="radio" name="user[gender]" value="Female">
          Female
        </label>
      </div>

      <div class="radio-inline">
        <label>
          <input type="radio" name="user[gender]" value="Male">
          Male
        </label>
      </div><br>

      <div class="dance-style-select">
        <label>
          <div class="dance-style-label">Dance Style</div>
          <select name="user[dance_style]"
                  class="form-control dance-style-dropdown">
            <option value="" disabled selected>Choose Style</option>
            <% @dance_styles.each do |ds| %>
              <option value="<%= ds %>"><%= ds %></option>
            <% end %>
          </select>
        </label><br>
      </div>

      <input type="text"
             name="user[company]"
             placeholder="Dance Company"
             class="form-control"><br>
    <% end %>

    <input type="submit"
           value="<%= button_value %>"
           class="login-button btn btn-success btn-lg btn-block">
  </form>

  <% if button_value == 'Log In' %>
    <button onclick="demo()" class="btn btn-primary btn-lg btn-block">Guest Log In</button>
  <% end %>
</div>

<script>
  var demo = function () {
    $(function () {
      $(".email").typed({
        strings: ["mistyc@abt.org"],
        typeSpeed: 20,
        callback: function () {
          $(".password").typed({
            strings: ["mistymisty"],
            typeSpeed: 20,
            callback: function () {
              $('.login-button').click()
            }
          });
        }
      });
    });
  }
</script>
