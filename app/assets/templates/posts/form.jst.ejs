<div class="post-form">
  <form class="clearfix">
    <% if (is_feed || is_current_user_profile) { %>
      <div class="post-form-text">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Update Status
      </div>
    <% } else { %>
      <div class="post-form-text">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Post
      </div>
    <% } %>

    <div class="form-group">
      <% if (is_feed || is_current_user_profile) { %>
        <textarea class="form-control new-post-content"
                  name="content"
                  placeholder="What's new in your dance life?"></textarea>
      <% } else { %>
        <textarea class="form-control new-post-content"
                  name="content"
                  placeholder="Write something..."></textarea>
      <% } %>
    </div>

    <div class="photo-preview">
    </div>

    <button class="create-post btn btn-primary btn-sm">
      Post
    </button>

    <button class="add-photo btn btn-primary btn-sm">
      Add Photo
    </button>
  </form>
</div>
