<% if (friendship) { %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3>About</h3>
    </div>

    <div class="panel-body">
      <table class="table">
        <caption>
          Basic Information
        </caption>

        <% if (show_info) { %>
          <tr>
            <td>Email</td>
            <td><%= friendship.escape('email') %></td>
          </tr>
        <% } %>

        <tr>
          <td>Gender</td>
          <td><%= friendship.escape('gender') %></td>
        </tr>
      </table>

      <table class="table">
        <caption>
          Bio
        </caption>
        
        <tr>
          <td>
            <%= friendship.escape('bio') %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% } %>
