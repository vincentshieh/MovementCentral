<% if (friendship) { %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3>About</h3>
    </div>

    <div class="panel-body">
      <table class="table contact-basic-info">
        <caption>
          Contact and Basic Information
        </caption>

        <% if (show_info) { %>
          <tr>
            <td>Email</td>
            <td><%= friendship.escape('email') %></td>
          </tr>
        <% } %>

        <tr>
          <td>Gender</td>
          <td><%= friendship.escape('gender') %></td>
        </tr>
      </table>

      <table class="table dance-info">
        <caption>
          Dance Background and Information
        </caption>

        <tr>
          <td>Dance Style</td>
          <td class="dance-style"><%= friendship.escape('dance_style') %></td>
        </tr>

        <tr>
          <td>Company</td>
          <td class="company"><%= friendship.escape('company') %></td>
        </tr>

        <% if (friendship.escape('nickname') || friendship.escape('self')) { %>
          <tr>
            <td>Nickname</td>
            <td class="nickname">
              <%= friendship.escape('nickname') %>

              <% if (friendship.escape('self')) { %>
                <button type="button" class="btn btn-primary btn-xs edit-nickname">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                </button>
              <% } %>
            </td>
          </tr>
        <% } %>

        <% if (show_info) { %>
          <% if (friendship.escape('job_title') || friendship.escape('self')) { %>
            <tr>
              <td>Job Title</td>
              <td class="job-title">
                <%= friendship.escape('job_title') %>

                <% if (friendship.escape('self')) { %>
                  <button type="button" class="btn btn-primary btn-xs edit-job-title">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                  </button>
                <% } %>
              </td>
            </tr>
          <% } %>

          <% if (friendship.escape('school') || friendship.escape('self')) { %>
            <tr>
              <td>School</td>
              <td class="school">
                <%= friendship.escape('school') %>

                <% if (friendship.escape('self')) { %>
                  <button type="button" class="btn btn-primary btn-xs edit-school">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                  </button>
                <% } %>
              </td>
            </tr>
          <% } %>
        <% } %>
      </table>

      <% if (show_info) { %>
        <table class="table location-info">
          <caption>
            Current City and Hometown
          </caption>

            <% if (friendship.escape('current_city') || friendship.escape('self')) { %>
              <tr>
                <td>Current City</td>
                <td class="current-city">
                  <%= friendship.escape('current_city') %>

                  <% if (friendship.escape('self')) { %>
                    <button type="button" class="btn btn-primary btn-xs edit-current-city">
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                    </button>
                  <% } %>
                </td>
              </tr>
            <% } %>

            <% if (friendship.escape('hometown') || friendship.escape('self')) { %>
              <tr>
                <td>Hometown</td>
                <td class="hometown">
                  <%= friendship.escape('hometown') %>

                  <% if (friendship.escape('self')) { %>
                    <button type="button" class="btn btn-primary btn-xs edit-hometown">
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                    </button>
                  <% } %>
                </td>
              </tr>
            <% } %>
        </table>
      <% } %>

      <% if (show_info) { %>
        <table class="table bio-table">
          <caption>
            Bio
          </caption>

          <tr>
            <td class="bio">
              <%= friendship.escape('bio') %>

              <% if (friendship.escape('self')) { %>
                <button type="button" class="btn btn-primary btn-xs edit-bio">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                </button>
              <% } %>
            </td>
          </tr>
        </table>
      <% } %>
    </div>
  </div>
<% } %>
